    <script>
        function toggleDay(dayId) {
            var content = document.querySelector('#' + dayId + ' .day-content');
            var toggle = document.querySelector('#' + dayId + ' .day-toggle');
            
            if (content && toggle) {
                content.classList.toggle('active');
                toggle.classList.toggle('active');
            }
        }

        // Auto-expand first day on load
        document.addEventListener('DOMContentLoaded', function() {
            setTimeout(function() {
                toggleDay('day1');
            }, 100);
        });

        // Add touch feedback for mobile
        document.addEventListener('DOMContentLoaded', function() {
            var elements = document.querySelectorAll('.day-header, .restaurant-tag');
            for (var i = 0; i < elements.length; i++) {
                elements[i].addEventListener('touchstart', function() {
                    this.style.transform = 'scale(0.98)';
                });
                
                elements[i].addEventListener('touchend', function() {
                    var elem = this;
                    setTimeout(function() {
                        elem.style.transform = 'scale(1)';
                    }, 100);
                });
            }
        });
    </script>
</body>
